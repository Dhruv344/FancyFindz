<%- include('../includes/head', { pageTitle: 'Signup' }) %>
    <link rel="stylesheet" href="/styles/form.css">
    <link rel="stylesheet" href="/styles/auth.css">

</head>
<body>
    <%- include('../includes/header') %>  
    <main>
        <h1>Create New Accout</h1>
        <form action="" method="">
            <p>
                <label for="email">E-Mail</label>
                <input type="email" id="email" name="email" required>
            </p>
            <p>
                <label for="email">Confirm Email</label>
                <input type="email" id="email" name="email" required>
            </p>
            <p>
                <label for="password">Password</label>
                <input type="password" id="password" name="password" minlength="8" required>
            </p>
            <hr>
            <p>
                <label for="fullName">Full Name</label>
                <input type="text" id="fullName" name="fullName" required>
            </p>
            <p>
                <label for="street">Street</label>
                <input type="text" id="street" name="street" required>
            </p>
            <p>
                <label for="postalCode">Postal Code</label>
                <input type="text" id="postalCode" name="postalCode" minlength="6" maxlength="6" required>
            </p>
            <p>
                <label for="city">City</label>
                <input type="text" id="city" name="city" required>
            </p>
            <button class="btn">Create Accout</button>
            <p id="switch-form"><a href="/login">Login Instead</a></p>
        </form>
    </main>
<%- include('../includes/footer') %>        
